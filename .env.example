# =============================================================================
# TRACKING & PIXEL CONFIGURATION
# Digi Web Crew - Tracking Blueprint
# =============================================================================

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Analytics 4
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX

# Meta (Facebook) Pixel
NEXT_PUBLIC_META_PIXEL_ID=XXXXXXXXXXXXXXX

# Meta Conversions API (Server-Side)
META_ACCESS_TOKEN=EAAG...your_access_token
# Optional: For testing events before going live
META_TEST_EVENT_CODE=TEST12345

# LinkedIn Insight Tag
NEXT_PUBLIC_LINKEDIN_PARTNER_ID=XXXXXXX

# Google Ads
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXX

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL=https://digiwebcrew.com

# =============================================================================
# DATABASE (if applicable)
# =============================================================================
# DATABASE_URL=your_database_url

# =============================================================================
# DIGITAL INFRASTRUCTURE & COMMAND CENTER
# =============================================================================

# LLM Visibility Tracking (LLMrefs)
LLMREFS_API_KEY=your_llmrefs_api_key
LLMREFS_PROJECT_ID=your_llmrefs_project_id

# Process Automation & ETL (Gumloop)
GUMLOOP_API_KEY=your_gumloop_api_key
GUMLOOP_WEBHOOK_SECRET=your_webhook_secret_for_etl

# Infrastructure Monitoring
UPTIME_ROBOT_API_KEY=your_uptime_robot_key
NEXT_PUBLIC_HOTJAR_ID=XXXXXXXXXX

# Oracle Cloud Management (Server-Side)
ORACLE_CLOUD_USER_OCID=ocid1.user.oc1...
ORACLE_CLOUD_TENANCY_OCID=ocid1.tenancy.oc1...
ORACLE_CLOUD_FINGERPRINT=xx:xx:xx...
ORACLE_CLOUD_PRIVATE_KEY_PATH=/path/to/private_key.pem

# =============================================================================
# NOTES
# =============================================================================
# 1. All NEXT_PUBLIC_ variables are exposed to the browser
# 2. META_ACCESS_TOKEN is server-side only (for CAPI security)
# 3. Get Meta access token from Events Manager > Settings > Generate Access Token
# 4. LinkedIn Partner ID from Campaign Manager > Account Assets > Insight Tag
# 5. GTM container ID from Google Tag Manager
